{
    "manifest_version": 2,
    "name": "ReScroll",
    "version": "1.0",
    "description": "Make a webpage scrollable if scroll is disabled, for example when you need to accept cookies.",
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": [
                "background.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/rescroll-16.png",
            "32": "icons/rescroll-32.png"
        }
    }
}